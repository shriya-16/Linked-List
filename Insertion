#include <bits/stdc++.h>
using namespace std;

class Node{
    public:
    int val;
    Node* next;
};

void add(Node** head, int val){
    Node* new_node = new Node();
    new_node->val = val;
    new_node->next = (*head);
    (*head) = new_node;
}

void insertAfter(Node** head, int new_val, int a){
    Node* new_node = new Node();
    new_node->val = new_val;
    Node* temp = (*head);
    while(temp->val != a)
        temp = temp->next;
    new_node->next = temp->next;
    temp->next = new_node;
}

void append(Node** head, int new_val){
    Node* new_node = new Node();
    new_node->val = new_val;
    Node* temp = (*head);
    while(temp->next != NULL)
        temp = temp->next;
    temp->next = new_node;
}

void printList(Node** head){
    Node* temp = (*head);
    while(temp != NULL){
        cout << temp->val << " ";
        temp = temp->next;
    }
}

int main(){
    Node* head = new Node;
    head->val = 1;
    head->next = NULL;
    add(&head, 2);
    add(&head, 3);
    insertAfter(&head, 4, 2);
    append(&head, 5);
    printList(&head);
    return 0;
}
